# ==============================================================================
# Cloudflare R2 Backup - Configuration File (.env)
# ==============================================================================
# Rename this file to '.env' and place it in the same directory as the script.
# The script will automatically load these variables.

# ------------------------------------------------------------------------------
# DIRECTORIES & DESTINATIONS
# ------------------------------------------------------------------------------

# The local directory you want to backup
SOURCE="/var/backups/data"

# The Rclone destination (configured via 'rclone config')
# Format: remote-name:bucket-name/path
RCLONE_DEST="cloudflare-backup:my-backups/"

# ------------------------------------------------------------------------------
# RETENTION & LOGGING
# ------------------------------------------------------------------------------

# How many days to keep backups on Cloudflare R2
RETENTION_DAYS=7

# Log file location
LOGFILE="/var/log/backup_sync.log"

# Lock file location (prevents parallel execution)
LOCKFILE="./backup_sync.lock"

# ------------------------------------------------------------------------------
# ADVANCED SETTINGS
# ------------------------------------------------------------------------------

# Regex pattern to identify backup folders (for restore/cleanup)
BACKUP_PATTERN="^backup-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}/$"

# Path to rclone executable (if not in PATH)
RCLONE="/usr/bin/rclone"
